:global {
  html {
    @import "../../node_modules/normalize.css/normalize.css";

    font-family: "Comic Sans MS";
    font-size: 16px;
    background-image: url("../assets/money.jpg");
  }

  body {
    padding: 1em;
    background-color: rgba(255, 255, 255, 0.7);
  }

  header {
    display: flex;
    justify-content: space-between;
  }

  header h1 {
    line-height: 1;
    margin: 0;
    font-size: 5.2rem;
  }
}
