.root {
  margin: 0 0 1em 0;
  border: 10px solid rgba(0, 0, 0, 0.2);
  padding: 1em;
  border-radius: 10px;
  break-inside: avoid;

  transition: all 1s linear;

  &:hover {
    border: 10px solid rgba(0, 0, 0, 1);
  }
}

