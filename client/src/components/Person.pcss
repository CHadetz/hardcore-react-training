.person {
  border: 5px solid rgb(0, 0, 0);
  padding: 1em;
  margin: 1em 0;
  border-radius: 10px;
  transition: 0.333s linear all;

  &:hover {
    border-radius: 3px;
    border-color: rgba(255, 255, 255);
  }
}

.male {
  background-color: rgb(200, 200, 255);
}

.female {
  /* kommentti */
  background-color: rgb(255, 200, 200);
}
