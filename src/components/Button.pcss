.button {
  padding: 1em;
  border: 5px solid rgb(0, 0, 0);
  border-radius: 5px;

  &:hover {
    background-color: rgb(255, 0, 0);
    color: rgb(255, 255, 0);
  }

}

.block {
  display: block;
  width: 100%;
}

.primary {
  background-color: rgb(100, 100, 100);
}

.secondary {
  background-color: rgb(255, 255, 255);
  color: rgb(0, 0, 0);
}
